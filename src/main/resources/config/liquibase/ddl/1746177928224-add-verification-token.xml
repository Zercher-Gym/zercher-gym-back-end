<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.29.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1746177928224-1" author="alex-aelenei">
        <createTable tableName="verification_tokens">
            <column name="id" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_verification_tokens"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="expiry_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1746177928224-2" author="alex-aelenei">
        <addColumn tableName="users">
            <column name="locked" type="BOOLEAN"/>
        </addColumn>
    </changeSet>
    <changeSet id="1746177928224-3" author="alex-aelenei">
        <addNotNullConstraint columnName="locked" tableName="users"/>
    </changeSet>
    <changeSet id="1746177928224-4" author="alex-aelenei">
        <addUniqueConstraint columnNames="user_id" constraintName="uc_verification_tokens_user"
                             tableName="verification_tokens"/>
    </changeSet>
    <changeSet id="1746177928224-5" author="alex-aelenei">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="verification_tokens"
                                 constraintName="FK_VERIFICATION_TOKENS_ON_USER" referencedColumnNames="id"
                                 referencedTableName="users"/>
    </changeSet>

</databaseChangeLog>